<div class="admin-education-container">
  <div class="container">
    <!-- Menu de navigation admin -->
    <%= render 'admin/shared/admin_nav' %>
    
    <div class="education-list">
      <div class="education-list__header">
        <h2>Détails de l'expérience</h2>
        <div class="header-actions">
          <%= link_to admin_professional_experiences_path, class: "animated-action-button" do %>
            <div class="icon-container">
              <i class="fas fa-arrow-left"></i>
            </div>
            <span class="button-text">Retour à la liste</span>
          <% end %>
        </div>
      </div>
    
    <div class="education-list__group">
      <div class="education-list__group-header">
        <div class="logo">
          <% if @professional_experience.logo.attached? %>
            <%= image_tag @professional_experience.logo %>
          <% else %>
            <div class="no-logo"><%= @professional_experience.company_name[0].upcase %></div>
          <% end %>
        </div>
        <h3><%= @professional_experience.company_name %></h3>
        <div class="kebab-menu">
          <button class="kebab-menu__button" onclick="toggleKebabMenu(this, event)">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
          </button>
          <div class="kebab-menu__content">
            <%= link_to edit_admin_professional_experience_path(@professional_experience), class: "menu-item btn-edit" do %>
              <i class="fas fa-edit"></i>
              <span>Modifier</span>
            <% end %>
            <%= link_to "#", class: "menu-item btn-delete btn-delete-experience", data: { delete_url: admin_professional_experience_path(@professional_experience) } do %>
              <i class="fas fa-trash-alt"></i>
              <span>Supprimer</span>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="education-list__group-items">
        <div class="education-list__item">
          <div class="education-list__item-body">
            <div class="position"><%= @professional_experience.job_title %></div>
            <div class="meta">
              <span class="date">
                <%= l(@professional_experience.start_date, format: '%B %Y') %> - 
                <% if @professional_experience.currently_working_here %>
                  Aujourd'hui
                <% else %>
                  <% if @professional_experience.end_date.present? %>
                    <%= l(@professional_experience.end_date, format: '%B %Y') %>
                  <% else %>
                    Non spécifiée
                  <% end %>
                <% end %>
              </span>
              <span class="location"><%= @professional_experience.location %></span>
              <span class="type">
                <%= @professional_experience.employment_type %> · <%= @professional_experience.workplace_type %>
              </span>
            </div>
            <div class="description">
              <%= simple_format(@professional_experience.description) %>
            </div>
          </div>
    
          <!-- Les boutons d'action ont été déplacés dans le kebab menu en haut -->
        </div>
      </div>
    </div>
  </div>
</div>
