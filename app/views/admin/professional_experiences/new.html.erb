<div class="admin-experience-container">
  <div class="container">
    <!-- Menu de navigation admin -->
    <%= render 'admin/shared/admin_nav' %>
    
    <div class="experience-list">
      <div class="experience-list__header">
        <div>
          <h2>Ajouter une expérience</h2>
          <p class="subtitle">Renseignez les détails de votre nouvelle expérience professionnelle</p>
        </div>
        <div class="header-actions">
          <%= link_to admin_professional_experiences_path, class: "animated-action-button" do %>
            <div class="icon-container">
              <i class="fas fa-arrow-left"></i>
            </div>
            <span class="button-text">Retour</span>
          <% end %>
        </div>
      </div>
      
      <%= render 'form', professional_experience: @professional_experience %>
    </div>
  </div>
</div>
