<div class="admin-education-container">
  <div class="container">
    <!-- Menu de navigation admin -->
    <div class="admin-nav">
      <ul class="admin-nav__list">
        <li class="admin-nav__item">
          <%= link_to "Expériences professionnelles", admin_professional_experiences_path %>
        </li>
        <li class="admin-nav__item active">
          <%= link_to "Formations", admin_educations_path %>
        </li>
        <li class="admin-nav__item">
          <%= link_to "Compétences", admin_skills_path %>
        </li>
      </ul>
    </div>
    
    <div class="education-list">
      <div class="education-list__header">
        <div>
          <h2>Modifier une formation</h2>
          <p class="subtitle">Renseignez les détails de votre formation</p>
        </div>
        <div class="header-actions">
          <%= link_to admin_educations_path, class: "animated-action-button" do %>
            <div class="icon-container">
              <i class="fas fa-arrow-left"></i>
            </div>
            <span class="button-text">Retour</span>
          <% end %>
        </div>
      </div>
      
      <%= render 'form', education: @education %>
    </div>
  </div>
</div>
