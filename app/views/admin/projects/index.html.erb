<div class="admin-education-container">
  <div class="container">
    <!-- Menu de navigation admin -->
    <div class="admin-nav">
      <ul class="admin-nav__list">
        <li class="admin-nav__item">
          <%= link_to "Page d'accueil", admin_home_sections_path %>
        </li>
        <li class="admin-nav__item">
          <%= link_to "Expériences professionnelles", admin_professional_experiences_path %>
        </li>
        <li class="admin-nav__item">
          <%= link_to "Formations", admin_educations_path %>
        </li>
        <li class="admin-nav__item">
          <%= link_to "Compétences", admin_skills_path %>
        </li>
        <li class="admin-nav__item active">
          <%= link_to "Projets", admin_projects_path %>
        </li>
      </ul>
    </div>
    
    <div class="education-list">
      <div class="education-list__header">
        <h2>Mes projets</h2>
        <div class="header-actions">
          <%= link_to new_admin_project_path, class: "animated-action-button" do %>
            <div class="icon-container">
              <i class="fas fa-plus-circle"></i>
            </div>
            <span class="button-text">Ajouter un projet</span>
          <% end %>
        </div>
      </div>
      
      <% if notice.present? %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>
      
      <div class="education-list__content">
    <% if @projects.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Titre</th>
              <th>Technologies</th>
              <th>Position</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td class="image-cell">
                  <% if project.image.attached? %>
                    <%= image_tag project.image.variant(resize_to_limit: [100, 100]), alt: project.title %>
                  <% else %>
                    <div class="placeholder-image">
                      <i class="fas fa-code"></i>
                    </div>
                  <% end %>
                </td>
                <td><%= project.title %></td>
                <td><%= project.technologies %></td>
                <td><%= project.position %></td>
                <td class="actions-cell">
                  <%= link_to edit_admin_project_path(project), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admin_project_path(project), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce projet ?' }, class: "btn btn-sm btn-outline-danger" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <p>Aucun projet n'a encore été ajouté.</p>
        <p>Cliquez sur "Nouveau projet" pour commencer.</p>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>
