<section class="section section-projects">
  <div class="container">
    <div class="section-projects__header">
      <h1>Mes Projets</h1>
      <p class="section-projects__subtitle">Découvrez mes réalisations et projets personnels</p>
    </div>
    
    <div class="section-projects__content">
      <% if @projects.any? %>
        <div class="projects-grid">
          <% @projects.each do |project| %>
            <div class="project-card">
              <div class="project-card__image">
                <% if project.image.attached? %>
                  <%= image_tag project.image, alt: project.title %>
                <% else %>
                  <div class="project-placeholder">
                    <i class="fas fa-code"></i>
                  </div>
                <% end %>
              </div>
              <div class="project-card__content">
                <h3 class="project-card__title"><%= project.title %></h3>
                <div class="project-card__technologies">
                  <% project.technologies.split(',').each do |tech| %>
                    <span class="technology-tag"><%= tech.strip %></span>
                  <% end %>
                </div>
                <p class="project-card__description"><%= truncate(project.description, length: 150) %></p>
                <div class="project-card__actions">
                  <%= link_to "Voir détails", projet_path(project), class: "btn btn-primary" %>
                  <% if project.github_url.present? %>
                    <%= link_to "GitHub", project.github_url, target: "_blank", class: "btn btn-outline" %>
                  <% end %>
                  <% if project.live_url.present? %>
                    <%= link_to "Démo", project.live_url, target: "_blank", class: "btn btn-outline" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>Aucun projet n'a encore été ajouté.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
