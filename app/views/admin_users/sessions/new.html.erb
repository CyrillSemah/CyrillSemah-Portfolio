<div class="admin-login-container">
  <div class="admin-login-form">
    <h1>AccÃ¨s administrateur</h1>
    
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Adresse e-mail" %>
        <%= f.email_field :email, required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, required: true %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Se connecter", class: "btn btn-primary" %>
        <%= link_to "Retour au site", root_path, class: "btn btn-secondary" %>
      </div>
      
      <div class="forgot-password">
        <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
